
<div class="search-results">
<% if params[:query].present? && results.present? %>
  <h2>Search Results</h2>
  <ul>
    <% results.each do |result| %>
      <li><%= result.title %></li>
      <li><%= result.content %></li>
    <% end %>
  </ul>
<% elsif params[:query].present? %>
  <p>No results found.</p>
<% end %>
</div>